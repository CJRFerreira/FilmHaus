@using FilmHaus.Localization
@model FilmHaus.Models.View.GeneralShowViewModel

@{
    ViewBag.Title = Locale.Delete;
}

<h2>@Locale.Delete @Model.MediaName</h2>
<hr />

<div>
    <div class="row">
        <div class="col-lg-6">
            <img src="@Url.Content(Model.PosterUri.ToString())" alt="@Model.MediaName" class="featurette-image-large" />
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.DateOfRelease, htmlAttributes: new { @class = "control-label" })
                    <p class="form-control-static">@Model.DateOfRelease</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Accolades, htmlAttributes: new { @class = "control-label" })
                    <p class="form-control-static">@Model.Accolades</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.NumberOfSeasons, htmlAttributes: new { @class = "control-label" })
                    <p class="form-control-static">@Model.NumberOfSeasons</p>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Locale.Confirm" class="btn btn-danger" />
            @Html.ActionLink(Locale.Cancel, "Index", null, new { @class = "btn btn-warning" })
        </div>
    }
</div>