@using FilmHaus.Localization
@model IEnumerable<FilmHaus.Models.View.GeneralShowViewModel>
@{
    ViewBag.Title = Locale.Shows;
}

<h2>@Locale.Shows</h2>
<hr />
@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                <tr>
                    <td>@item.PosterUri</td>
                    <td>@item.MediaName</td>
                    <td>@item.DateOfRelease</td>
                    <td>@item.Accolades</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="well">
        <p class="text-info">
        </p>
    </div>
}