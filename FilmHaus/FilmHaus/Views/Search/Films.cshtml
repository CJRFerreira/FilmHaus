@using FilmHaus.Localization
@model FilmHaus.Models.View.SearchFilmsViewModel
@{
    ViewBag.Title = Locale.Films;
}

<h2>@Locale.Films</h2>
<hr />
@using (Html.BeginForm("SearchFilms", "Search", FormMethod.Post, new { @class = "form form-inline" }))
{
    <div class="form-group">
        @Html.DisplayFor(m => m.SearchTerm)
        @Html.EditorFor(m => m.SearchTerm)
    </div>
    <div class="form-group">
        @Html.DisplayFor(m => m.ReleaseYear)
        @Html.EditorFor(m => m.ReleaseYear)
    </div>
    <div class="form-group">
        @Html.DisplayFor(m => m.Rating)
        @Html.EditorFor(m => m.Rating)
    </div>
    <div class="form-group">
        @Html.DisplayFor(m => m.Accolades)
        @Html.EnumDropDownListFor(m => m.Accolades)
    </div>
    <input type="submit" value="@Locale.SearchFilms" class="btn btn-primary" />
}
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Locale.Poster
            </th>
            <th>
                @Locale.Name
            </th>
            <th>
                @Locale.ReleaseDate
            </th>
            <th>
                @Locale.UserActions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr id="@item.MediaId">
                <td>
                    <img src="@Url.Content(item.PosterUri.ToString())" alt="@item.MediaName" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MediaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRelease)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { viewModel = item }, new { @class = "btn btn-info" })
                    @if (User.IsInRole("Admin"))
                    {
                        Html.ActionLink("Edit", "Edit", new { viewModel = item }, new { @class = "btn btn-primary" });
                        Html.ActionLink("Delete", "Delete", new { viewModel = item }, new { @class = "btn btn-warning" });
                    }
                </td>
            </tr>
        }
    </tbody>
</table>