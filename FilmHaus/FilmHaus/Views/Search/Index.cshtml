@using FilmHaus.Localization
@model FilmHaus.Models.View.SearchLibraryViewModel
@{
    ViewBag.Title = Locale.Library;
}

<h2>@Locale.Library</h2>
<hr />
@using (Html.BeginForm("SearchAll", "Search", FormMethod.Post, new { @class = "form form-inline" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.SearchViewModel.SearchTerm)
        @Html.TextBoxFor(m => m.SearchViewModel.SearchTerm, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SearchViewModel.ReleaseYear)
        @Html.TextBoxFor(m => m.SearchViewModel.ReleaseYear, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SearchViewModel.Rating)
        @Html.TextBoxFor(m => m.SearchViewModel.Rating, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SearchViewModel.Accolades)
        @Html.EnumDropDownListFor(m => m.SearchViewModel.Accolades, htmlAttributes: new { @class = "form-control" })
    </div>
    <input type="submit" value="@Locale.Search" class="btn btn-primary" />
}
@if (Model.Films != null || Model.Films.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Locale.Poster</th>
                <th>@Locale.Name</th>
                <th>@Locale.ReleaseDate</th>
                <th>@Locale.UserActions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Films)
                {
                <tr>
                    <td>@item.PosterUri</td>
                    <td>@item.MediaName</td>
                    <td>@item.DateOfRelease</td>
                    <td>@item.Accolades</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="well">
        <p class="text-info">
        </p>
    </div>
}

@if (Model.Shows.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Locale.Poster</th>
                <th>@Locale.Name</th>
                <th>@Locale.ReleaseDate</th>
                <th>@Locale.UserActions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Shows)
                {
                <tr>
                    <td>@item.PosterUri</td>
                    <td>@item.MediaName</td>
                    <td>@item.DateOfRelease</td>
                    <td>@item.Accolades</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="well">
        <p class="text-info">
        </p>
    </div>
}