@using FilmHaus.Localization
@model List<FilmHaus.Models.View.FilmViewModel>
@{
    ViewBag.Title = Locale.FilmLibrary;
}

<h2>@Locale.FilmLibrary</h2>
<hr />
@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PosterUri</td>
                    <td>@item.FilmName</td>
                    <td>@item.DateOfRelease</td>
                    <td>@item.Accolades</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="well">
        <p class="text-info">
        </p>
    </div>
}