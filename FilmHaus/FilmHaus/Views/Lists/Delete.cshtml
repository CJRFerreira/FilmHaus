@using FilmHaus.Localization
@model FilmHaus.Models.View.ListViewModel

@{
    ViewBag.Title = Locale.Delete;
}

<h2>@Locale.Delete @Model.Title</h2>
<hr />

<div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                    <p class="form-control-static">@Model.Title</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.CreatedOn, htmlAttributes: new { @class = "control-label" })
                    <p class="form-control-static">@Model.CreatedOn</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Shared, htmlAttributes: new { @class = "control-label" })
                    <p class="form-control-static">@Model.Shared</p>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Locale.Confirm" class="btn btn-danger" />
            @Html.ActionLink(Locale.Cancel, "Index", null, new { @class = "btn btn-warning" })
        </div>
    }
</div>