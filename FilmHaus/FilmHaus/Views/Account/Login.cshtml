@using FilmHaus.Models.View
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-6">
        <section id="loginForm" class="card">
            <div class="card-header">
                <h4>Already a member? Log in!</h4>
                <hr />
            </div>

            <div class="card-container">
                @Html.Partial("_UserLoginPartial")
            </div>

            <div class="card-footer">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial")
                </section>
            </div>
            @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
        </section>
    </div>
    <div class="col-md-6">
        <section id="registerForm" class="card">
            <div class="card-header">
                <h4>New to FilmHaus? Register!</h4>
                <hr />
            </div>
            <div class="card-container">
                @Html.Partial("_UserRegisterPartial")
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}