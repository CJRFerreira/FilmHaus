@using FilmHaus.Localization;
@using FilmHaus.Models.View;
@model BaseReviewViewModel

<div id="reviewModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    @Locale.Review
                </h4>
                <button type="button" class="close pull-right" data-dismiss="modal">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Shared, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning pull-left" data-dismiss="modal">
                    @Locale.Close
                </button>
                <button type="submit" class="btn btn-primary pull-right" data-dismiss="modal">
                    @Locale.Edit
                </button>
            </div>
        </div>
    </div>
</div>